<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/l1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/dcdc_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Rating: 1 Lowest-5 Highest"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Environment"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <EditText

                    android:id="@+id/environment"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="05dp"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="1-5"
                    android:inputType="number"
                    android:maxLength="1"
                    android:digits="12345"
                    android:minHeight="@dimen/et_height" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="05dp"
                    android:text="Cleanliness"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/cleanliness"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="05dp"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="1-5"
                    android:digits="12345"
                    android:inputType="number"
                    android:maxLength="1"
                    android:minHeight="@dimen/et_height" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="05dp"
                    android:text="Staff Behaviour"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/staff_behave"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="05dp"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="1-5"
                    android:inputType="number"
                    android:maxLength="1"
                    android:minHeight="@dimen/et_height"
                    android:digits="12345"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="05dp"
                    android:text="Procedure Explained"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Procedure"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="05dp"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="1-5"
                    android:inputType="number"
                    android:maxLength="1"
                    android:minHeight="@dimen/et_height"
                    android:digits="12345"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="05dp"
                    android:text="Dialysis Started On Time"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/DialysisStarted"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="05dp"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="1-5"
                    android:inputType="number"
                    android:maxLength="1"
                    android:minHeight="@dimen/et_height"
                    android:digits="12345"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="05dp"
                    android:text="Dialysis Received for 4 Hours"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/DialysisReceived"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="05dp"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="1-5"
                    android:inputType="number"
                    android:maxLength="1"
                    android:minHeight="@dimen/et_height"
                    android:digits="12345"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="05dp"
                    android:text="Feedback Date"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_AppointmentDate"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/et_height"
                    android:layout_marginTop="5dp"
                    android:drawableRight="@drawable/ic_date_range_black_24dp"
                    android:drawableTint="@color/colorPrimary"
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:hint="dd-MM-yyyy"
                    android:inputType="none"
                    android:maxLines="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="05dp"
                    android:text="Remarks"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/description"
                    style="@style/CustomEdittextStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="05dp"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="Remarks"
                    android:inputType="textMultiLine"
                    android:minHeight="@dimen/et_height"

                    />
            </LinearLayout>

