        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Patient Name"
            android:textColor="#0f2d49"
            android:textSize="19sp"
            android:textStyle="normal"
            android:visibility="gone" />





        <EditText
            android:id="@+id/et_DoctorName"
            style="@style/CustomEdittextStyle"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/et_height"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
            android:drawableTint="@color/colorPrimary"
            android:editable="false"

            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Brick Kilns"
            android:inputType="none"
            android:maxLines="1"
            android:padding="@dimen/et_padding"
            android:textSize="16sp" />
        <EditText

            style="@style/CustomEdittextStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="Percentage of Oxygen"
            android:inputType="text"
            android:minHeight="@dimen/et_height"


            />


        <EditText

            style="@style/CustomEdittextStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="Percentage of carbon dioxide"
            android:inputType="text"
            android:minHeight="@dimen/et_height"


            />
        <EditText

            style="@style/CustomEdittextStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="Carbon monoxide in PPM(Parts Per Million)"
            android:inputType="text"
            android:minHeight="@dimen/et_height"


            />
        <EditText

            style="@style/CustomEdittextStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="Dust Concentration or Particulate Matter (PM) in mg/Nm3"
            android:inputType="text"
            android:minHeight="@dimen/et_height"


            />




